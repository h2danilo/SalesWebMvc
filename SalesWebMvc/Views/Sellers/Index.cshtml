@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Inserir</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm tn-success disabled"><span class="glyphicon glyphicon-pencil"></span> Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm tn-success disabled"><span class="glyphicon glyphicon-eye-open"></span> Visualizar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm tn-success disabled"><span class="glyphicon glyphicon-trash"></span> Deletar</a>*@

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Alterar"><span class="glyphicon glyphicon-pencil"></span> </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Visualizar"><span class="glyphicon glyphicon-eye-open"></span> </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Deletar"><span class="glyphicon glyphicon-trash"></span> </a>
                </td>
            </tr>
        }
    </tbody>

</table>


